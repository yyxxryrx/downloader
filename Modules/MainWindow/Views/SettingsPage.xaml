<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Downloader.Modules.MainWindow.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Downloader.Modules.MainWindow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:viewModels="using:Downloader.Modules.MainWindow.ViewModels"
    mc:Ignorable="d">

    <Page.Resources>
        <local:EnumConvertToString x:Name="EnumConvertToString" />
    </Page.Resources>

    <Grid Margin="36">
        <StackPanel Spacing="16">
            <StackPanel Spacing="4">
                <TextBlock x:Uid="LanguageLabel"
                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                <InfoBar IsOpen="False"
                         x:Name="InfoBar1"
                         Severity="Success"
                         x:Uid="LanguageChangedInfoBar" />
                <controls:SettingsCard x:Uid="LanguageCard">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE775;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{x:Bind ViewModel.Language.Forward.Keys}"
                              SelectedItem="{x:Bind ViewModel.CurrentLanguage, Mode=TwoWay}"
                              SelectionChanged="Language_OnSelectionChanged" />
                </controls:SettingsCard>
            </StackPanel>
            <StackPanel Spacing="4">
                <TextBlock x:Uid="DownloadLabel"
                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                <controls:SettingsExpander x:Uid="DownloadPathSettingsExpander">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE74E;" />
                    </controls:SettingsExpander.HeaderIcon>
                    <controls:SettingsExpander.Items>
                        <controls:SettingsCard x:Uid="DownloadPathSettingsCard"
                                               IsEnabled="{x:Bind ViewModel.DownloadPathModeIsCustom,Mode=OneWay}">
                            <controls:SettingsCard.HeaderIcon>
                                <FontIcon Glyph="&#xE792;" />
                            </controls:SettingsCard.HeaderIcon>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0"
                                         Margin="2,0"
                                         LostFocus="PathTextBox_OnLostFocus"
                                         Text="{x:Bind ViewModel.Path,Mode=TwoWay}" />
                                <Button Grid.Column="1"
                                        Content="..."
                                        x:Name="OpenPicker"
                                        Margin="2,0"
                                        Command="{x:Bind ViewModel.OpenDirectoryPickerCommand}"
                                        CommandParameter="{x:Bind OpenPicker}" />
                            </Grid>
                        </controls:SettingsCard>
                    </controls:SettingsExpander.Items>
                    <ComboBox ItemsSource="{x:Bind ViewModel.DownloadPathModes}"
                              SelectedItem="{x:Bind ViewModel.DownloadPathMode,Mode=TwoWay}"
                              SelectionChanged="DownloadPathMode_OnSelectionChanged">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="viewModels:DownloadPathMode">
                                <TextBlock Text="{x:Bind Converter={StaticResource EnumConvertToString}}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </controls:SettingsExpander>
                <controls:SettingsExpander Header="Thread Count"
                                           Description="The number of threads to use for downloading.">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE9E9;" />
                    </controls:SettingsExpander.HeaderIcon>
                    <ComboBox>
                        <x:String>Default</x:String>
                        <x:String>Presets</x:String>
                        <x:String>Custom</x:String>
                    </ComboBox>
                </controls:SettingsExpander>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>