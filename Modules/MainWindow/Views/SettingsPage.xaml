<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Downloader.Modules.MainWindow.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Downloader.Modules.MainWindow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    mc:Ignorable="d">

    <Grid Margin="36">
        <StackPanel Spacing="12">
            <StackPanel Spacing="4">
                <TextBlock x:Uid="LanguageLabel"
                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                <InfoBar IsOpen="False"
                         x:Name="InfoBar1"
                         Severity="Success"
                         x:Uid="LanguageChangedInfoBar" />
                <controls:SettingsCard x:Uid="LanguageCard">
                    <controls:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE775;" />
                    </controls:SettingsCard.HeaderIcon>
                    <ComboBox ItemsSource="{x:Bind ViewModel.Language.Forward.Keys}"
                              SelectedItem="{x:Bind ViewModel.CurrentLanguage, Mode=TwoWay}"
                              SelectionChanged="Language_OnSelectionChanged" />
                </controls:SettingsCard>
            </StackPanel>
            <StackPanel Spacing="4">
                <TextBlock Text="Thread count"
                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                <controls:SettingsExpander Header="Thread Count"
                                           Description="The number of threads to use for downloading.">
                    <controls:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE9E9;" />
                    </controls:SettingsExpander.HeaderIcon>
                    <ComboBox>
                        <x:String>Default</x:String>
                        <x:String>Presets</x:String>
                        <x:String>Custom</x:String>
                    </ComboBox>
                </controls:SettingsExpander>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>