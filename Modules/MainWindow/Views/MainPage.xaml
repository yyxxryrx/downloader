<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Downloader.Modules.MainWindow.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Downloader.Modules.MainWindow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:global="using:Downloader.Modules"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <CommandBar Grid.Row="0"
                    DefaultLabelPosition="Right">
            <AppBarButton Label="New Download">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xECC8;" />
                </AppBarButton.Icon>
            </AppBarButton>
        </CommandBar>
        <NavigationView Grid.Row="1"
                        IsPaneOpen="False"
                        IsBackButtonVisible="Collapsed"
                        SelectedItem="{x:Bind ViewModel.Item,Mode=TwoWay}"
                        SelectionChanged="NavigationView_OnSelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="HistoryNavigationViewItem"
                                    IsSelected="True"
                                    Tag="History">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE81C;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="DownloadingNavigationViewItem"
                                    Tag="Downloading">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xEBD3;" />
                    </NavigationViewItem.Icon>
                    <NavigationViewItem.InfoBadge>
                        <InfoBadge Value="{x:Bind global:GlobalVars.Downloaders.Count,Mode=OneWay}"
                                   Opacity="{x:Bind global:GlobalVars.Downloaders.Count,Mode=OneWay}" />
                    </NavigationViewItem.InfoBadge>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <NavigationView.Header>
                <TextBlock Text="{x:Bind Loader.GetString(ViewModel.HeaderText), Mode=OneWay}"
                           FontWeight="Medium" />
            </NavigationView.Header>
            <Frame x:Name="Frame1" />
        </NavigationView>
    </Grid>
</Page>