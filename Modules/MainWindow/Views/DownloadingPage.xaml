<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Downloader.Modules.MainWindow.Views.DownloadingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Downloader.Modules.MainWindow.Views"
    xmlns:downloader="using:Downloader.Modules.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <local:StatueConvertToIcon x:Name="ConvertToIcon" />
        <local:ProgressConvertToString x:Name="ProgressConvertToString" />
        <local:StatueConvertToVisibilityForIcon x:Name="VisibilityForIcon" />
        <local:StatueConvertToVisibilityForProgress x:Name="VisibilityForProgress" />
        <local:StatueConvertToBoolForShowError x:Name="BoolForShowError" />
        <local:StatueConvertToBoolForShowPaused x:Name="BoolForShowPaused" />
        <local:StatueConvertToBoolForIsIndeterminate x:Name="BoolForIsIndeterminate" />
        <local:CountConvertToVisibilityForListView x:Name="ConvertToVisibilityForListView" />
        <local:CountConvertToVisibilityForTextblock x:Name="ConvertToVisibilityForTextblock" />
    </Page.Resources>

    <Grid Margin="36">
        <TextBlock Text="There are no downloads for the task yet"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Visibility="{x:Bind ViewModel.Downloaders.Count,Mode=OneWay,Converter={StaticResource ConvertToVisibilityForTextblock}}" />
        <ListView ItemsSource="{x:Bind ViewModel.Downloaders,Mode=OneWay}"
                  Visibility="{x:Bind ViewModel.Downloaders.Count,Mode=OneWay,Converter={StaticResource ConvertToVisibilityForListView}}"
                  SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="downloader:Downloader">
                    <Expander ExpandDirection="Down"
                              HorizontalAlignment="Stretch"
                              HorizontalContentAlignment="Stretch"
                              Margin="0,8">
                        <Expander.Header>
                            <Grid Margin="0,4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"
                                      Margin="0,0,12,0">
                                    <FontIcon
                                        Glyph="{x:Bind Statue,Mode=OneWay,Converter={StaticResource ConvertToIcon}}"
                                        Visibility="{x:Bind Statue,Mode=OneWay,Converter={StaticResource VisibilityForIcon}}" />
                                    <ProgressRing IsActive="True"
                                                  Visibility="{x:Bind Statue,Mode=OneWay,Converter={StaticResource VisibilityForProgress}}" />
                                </Grid>
                                <StackPanel Grid.Column="1"
                                            Orientation="Vertical">
                                    <StackPanel Orientation="Horizontal"
                                                Spacing="4">
                                        <TextBlock x:Uid="FilenameLabel"
                                                   Style="{StaticResource BodyStrongTextBlockStyle}" />
                                        <TextBlock Text="{x:Bind FileName}" />
                                    </StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ProgressBar Grid.Column="0"
                                                     Margin="4,0"
                                                     VerticalAlignment="Center"
                                                     Value="{x:Bind Progress, Mode=OneWay}"
                                                     IsIndeterminate="{x:Bind Statue,Mode=OneWay,Converter={StaticResource BoolForIsIndeterminate}}"
                                                     ShowPaused="{x:Bind Statue,Mode=OneWay,Converter={StaticResource BoolForShowPaused}}"
                                                     ShowError="{x:Bind Statue,Mode=OneWay,Converter={StaticResource BoolForShowError}}" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="4,0,0,2"
                                                   VerticalAlignment="Center"
                                                   Text="{x:Bind Progress,Mode=OneWay,Converter={StaticResource ProgressConvertToString}}" />
                                    </Grid>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                            <TextBlock x:Uid="SpeedLabel" />
                                            <TextBlock Text="{x:Bind Speed,Mode=OneWay}" />
                                        </StackPanel>
                                        <StackPanel Grid.Column="1"
                                                    HorizontalAlignment="Right"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                            <TextBlock x:Uid="RemainingLabel" />
                                            <TextBlock Text="--:--" />
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Expander.Header>
                        <ListView ItemsSource="{x:Bind Chunks,Mode=OneWay}"
                                  SelectionMode="None">
                            <ListView.Header>
                                <StackPanel Orientation="Horizontal"
                                            Spacing="4">
                                    <TextBlock x:Uid="ChunkCountLabel" />
                                    <TextBlock Text="{x:Bind Chunks.Count,Mode=OneWay}" />
                                </StackPanel>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="downloader:ChunkDownloader">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"
                                                    Orientation="Horizontal"
                                                    Spacing="4">
                                            <TextBlock x:Uid="ChunkLabel"
                                                       Style="{StaticResource BodyStrongTextBlockStyle}" />
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{x:Bind Id}"
                                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                                                <TextBlock Text=":"
                                                           Style="{StaticResource BodyStrongTextBlockStyle}" />
                                            </StackPanel>
                                        </StackPanel>
                                        <ProgressBar Grid.Column="1"
                                                     Margin="4,0"
                                                     Value="{x:Bind Progress, Mode=OneWay}"
                                                     IsIndeterminate="{x:Bind Statue, Mode=OneWay,Converter={StaticResource BoolForIsIndeterminate}}"
                                                     ShowError="{x:Bind Statue, Mode=OneWay,Converter={StaticResource BoolForShowError}}"
                                                     ShowPaused="{x:Bind Statue, Mode=OneWay,Converter={StaticResource BoolForShowPaused}}" />
                                        <TextBlock Grid.Column="2"
                                                   Margin="4,0,0,2"
                                                   Text="{x:Bind Progress, Mode=OneWay,Converter={StaticResource ProgressConvertToString}}" />
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>