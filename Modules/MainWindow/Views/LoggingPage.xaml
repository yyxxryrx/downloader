<?xml version="1.0" encoding="utf-8"?>

<Page
    x:Class="Downloader.Modules.MainWindow.Views.LoggingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Downloader.Modules.MainWindow.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI"
    xmlns:serilog="using:Serilog.Events"
    xmlns:models="using:Downloader.Modules.Models"
    xmlns:converter="using:Downloader.Modules.MainWindow.Converter"
    mc:Ignorable="d"
    Loaded="LoggingPage_OnLoaded">

    <Page.Resources>
        <converter:LevelToIconConverter x:Name="LevelToIconConverter" />
        <converter:LevelToColorConverter x:Name="LevelToColorConverter" />
        <converter:LevelToStringConverter x:Name="LevelToStringConverter" />
    </Page.Resources>

    <Grid Margin="36">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <labs:TokenView Grid.Row="0"
                        x:Name="TokenView1"
                        ItemsSource="{x:Bind ViewModel.ItemsSource}"
                        SelectionChanged="Selector_OnSelectionChanged"
                        SelectionMode="Multiple">
            <labs:TokenView.ItemTemplate>
                <DataTemplate x:DataType="serilog:LogEventLevel">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <FontIcon Grid.Column="0"
                                  Margin="2,0"
                                  Foreground="{x:Bind Converter={StaticResource LevelToColorConverter}}"
                                  Glyph="{x:Bind Converter={StaticResource LevelToIconConverter}}" />
                        <TextBlock Grid.Column="1"
                                   Margin="2,0"
                                   Text="{x:Bind Converter={StaticResource LevelToStringConverter}}" />
                    </Grid>
                </DataTemplate>
            </labs:TokenView.ItemTemplate>
        </labs:TokenView>
        <ListView Grid.Row="1"
                  Margin="0,8"
                  ItemsSource="{x:Bind ViewModel.Logs,Mode=OneWay}"
                  SelectionMode="None">
            <ListView.Transitions>
                <EdgeUIThemeTransition />
                <ContentThemeTransition />
                <EntranceThemeTransition />
                <AddDeleteThemeTransition />
            </ListView.Transitions>
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="models:LogEntry">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{StaticResource CardStrokeColorDefaultBrush}"
                            CornerRadius="{ThemeResource OverlayCornerRadius}"
                            Height="50"
                            Padding="8"
                            Margin="0,8"
                            Translation="0,0,8">
                        <Border.Shadow>
                            <ThemeShadow x:Name="shadow" />
                        </Border.Shadow>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <FontIcon Grid.Column="0"
                                      Foreground="{x:Bind Level, Converter={StaticResource LevelToColorConverter}}"
                                      Glyph="{x:Bind Level, Converter={StaticResource LevelToIconConverter}}" />
                            <Grid Grid.Column="1" Margin="4,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="{x:Bind Message}" />
                                <TextBlock Grid.Row="1"
                                           Text="{x:Bind Timestamp}"
                                           Foreground="{StaticResource TextFillColorTertiaryBrush}"
                                           Style="{StaticResource CaptionTextBlockStyle}" />
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>